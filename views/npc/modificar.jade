                        input(type='text' name='idItem' placeholder='Ingresa nombre' tabindex=1)
        
            #modificarDatos
                              
                    h3 Guardar nueva mision
                    form(method='post')
                        .separador
                            label(for='idMision') Id: 
                            input(type='text' name='idMision' placeholder='#{id}' tabindex=1)
